@model CollectorzCorner.Models.RegisterModel

@{
    ViewBag.Title = "Collectorz Corner";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div class="form-horizontal">
    <h2>Register</h2>
<p class="well" style="font-weight:bold;background-color:#afb0bd">
    Use the form below to create your new Collectorz Corner account. 
</p>
            <div class="control-group">
                <label class="control-label">Username:</label>
            
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Email:</label>
            
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Password:</label>
            
                <div class="controls">
                     @Html.PasswordFor(m => m.Password)
                    <a href="#" rel="tooltip" id="element" data-placement="right" title="Password must be a minimum of 6 characters." style="text-decoration:none"><span class="badge badge-info">?</span></a>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Confirm Password:</label>
            
                <div class="controls">
                     @Html.PasswordFor(m => m.ConfirmPassword)
                     @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Security Question:</label>
            
                <div class="controls">
                    @Html.TextBoxFor(m => m.SecurityQuestion)
                </div>
                <br />
                <label class="control-label">Security Answer:</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.SecurityAnswer)
                </div>
            </div>

          <div class="control-group">
            <div class="controls"><input type="submit" class="btn btn-success" value="Register" /></div>
          </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#element').tooltip();
        });
    </script>
}
